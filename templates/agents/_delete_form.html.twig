<form method="post" action="{{ path('agents_delete', {'auId': agent.auId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agent.auId) }}">
    <button class="btn">Delete</button>
</form>
